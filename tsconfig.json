{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "lib": ["dom", "ES2016"], 
      "jsx": "react",
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts","src/**/*.tsx"],
    "exclude": ["node_modules"]
  }